<header>
  <div class="ui top fixed menu">
    <%= link_to root_path do %>
      <div class="header item">Kengai</div>
    <% end -%>
    <% if current_user %>
      <div class="right menu">
        <div class="ui dropdown item button">
          <i class="settings icon"></i>
          <i class="dropdown icon"></i>
          <div class="menu">
            <div class="header"><%= current_user.email %></div>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'item' %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="right menu">
        <%= link_to new_user_registration_path, class: 'item' do %>
          <div class="ui primary button">Sign up</div>
        <% end -%>
        <%= link_to new_user_session_path, class: 'item' do %>
          <div class="ui button">Sign in</div>
        <% end -%>
      </div>
    <% end %>
  </div>
</header>
